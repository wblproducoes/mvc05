# Database Configuration
DB_HOST=localhost
DB_NAME=admin_system
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4
DB_TABLE_PREFIX=

# Application Configuration
APP_NAME="Sistema Administrativo MVC"
APP_URL=http://localhost
APP_ENV=development
APP_DEBUG=true
APP_KEY=your-secret-key-here
APP_TIMEZONE=America/Sao_Paulo

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Sistema Administrativo"

# Security Configuration
CSRF_TOKEN_EXPIRE=3600
SESSION_TIMEOUT=7200
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
PASSWORD_MIN_LENGTH=12
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90
ALERT_THRESHOLD_FAILED_LOGINS=10
ALERT_THRESHOLD_BLOCKED_IPS=5
MONITOR_FILE_CHANGES=true
SECURITY_EMAIL_ALERTS=false
SECURITY_ALERT_EMAIL=admin@localhost

# Installation
INSTALL_PASSWORD=admin123
# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=30
LOG_DATE_FORMAT=Y-m-d H:i:s
LOG_INCLUDE_CONTEXT=true
LOG_INCLUDE_TRACE=false
LOG_EMAIL_ALERTS=admin@localhost